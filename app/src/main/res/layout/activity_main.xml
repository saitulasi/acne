<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dellpc.acne.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sv">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="@drawable/acne"
                android:paddingLeft="10sp"
                android:text="Acne"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textStyle="bold"
                android:textSize="25sp"
                android:paddingLeft="10sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/di"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acne is an infection of the skin,cased by changes in the sebaceous glands.The most common form of acne is called acne vulgaris,which means common acne.The redness comes from the inflammation of the skin in response of the onfection.\n"
                android:textStyle="normal"
                android:textSize="20sp"
                android:paddingLeft="20sp"
                android:textColor="@android:color/holo_purple"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/causes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Causes"
                android:textStyle="bold"
                android:paddingLeft="10sp"
                android:textSize="25sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/ci"
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" * Hormonal fluctuation\n
* Hyperactive sebaceous glands\n
* Stress\n
* Many dead skin cells staying on the skin\n
* Bacteria in the pores\n
* Skin irritation or scratching of any sort\n"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@android:color/holo_purple"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/symptoms"
                android:paddingLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:text="Symptoms" />
            <TextView
                android:id="@+id/si"
                android:paddingLeft="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" * Cysts\n
* Redness around the skin eruptions\n
* Whiteheads\n
* Pustules\n"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@android:color/holo_purple"
                android:layout_marginTop="10dp" />


            <TextView
                android:id="@+id/home"
                android:paddingLeft="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Remedies"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />
            <TextView
                android:id="@+id/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:text="1.Lemon juice:\nRub a slice of lemon on the affected area and leave it for few hrs before rinsing your face with water

\n\n2.Honey:\nApply a tspn of honey to affected areas,or make a mask by mixing 1/2 cup of honey with 1 cup plane oatmeal and leave it on for 30 min"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@android:color/holo_purple"></TextView>
        </LinearLayout>
    </ScrollView>



</android.support.constraint.ConstraintLayout>
